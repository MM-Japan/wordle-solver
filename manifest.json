{
  "manifest_version": 3,
  "name": "Wordle Solver",
  "version": "1.0",
  "description": "Displays today's Wordle solution.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.nytimes.com/svc/wordle/v2/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }
}
